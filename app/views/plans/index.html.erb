<div id="search-box">
  <div class="search-wrapper">
  </div>
  <div class="text-fields-wrapper">
    <h3 class="from-place"><span>From: </span>Bangalore</h3>
    <h3>Where do you wanna go?</h3>
    <form id="search-form" action="#">
      <input name="toplace" type="text" class="from-box location" placeholder="Location Name"/>
      <h3>When?</h3>
      <input name="departure" type="text" class="from-box date-selector" placeholder="Departure MM-DD-YYYY"/>
      <input name="arrival" type="text" class="date-selector" placeholder="Arrival MM-DD-YYYY"/>
      <br />
      <input type="submit" class="btn btn-info" value="Stay? Travel? places around?" />
    </form>
  </div>
</div>

<div id="weather"></div>

<div id="map">
  <div id="map-canvas" style="float:left;width:70%; height:100%"></div>
  <div id="directions-panel" style="float:right;width:30%;height 100%"></div>
</div>

<div style="clear:both"></div>

<div id="slider-code">
    <ul class="pager nav nav-tabs">
      <%= render "hotels" %>
      <%= render "bus" %>
      <%= render "flights" %>
      <%= render "visits" %>
      <%= render "restaurants" %>
    </ul>
    <!-- If you have come here and found that we have hardcoded the values
    for redbus, congratulations. You have a very deep understanding of APIs.
    Also, update the counter below showing the time you spent reading this
    for redbus, congratulations. You have a very deep understanding of APIs.
    Also, update the counter below showing the cumulative time people have spent reading this
    COMMENT_TIME_COUNTER = 20 minutes
    -->
    <a href="#" class="buttons prev">left</a>
    <div class="viewport">
        <ul class="overview">
            <li id="hotels"></li>
            <li id="buses">
            <% (rand(3) + 8).times do %>
              <div class="boxes">
                <label>Travels:</label>
                <span><%= BUSES[rand(BUSES.count)] %></span>
                <label>Date:</label>
                <span class="date"></span>
                <label>Time:</label>
                <span>07:25 - 08:25</span>
                <label>Cost:</label>
                <span><%= rand(700) + 500 %></span>
              </div>
            <% end %>
            </li>
            <li id="flights"><div id="dep"><h2>Departure</h2></div><div style="clear:both"></div><div id="arr"><h2>Arrival</h2></div></li>
            <li id="places">tab four</li>
            <li id="restaurants"></li>
        </ul>
    </div>
    <a href="#" class="buttons next">right</a>
</div>
